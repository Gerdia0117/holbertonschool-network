#!/usr/bin/env bash
# Configures an Ubuntu server to resolve localhost to 127.0.0.2 and facebook.com to 8.8.8.8

# Create a temporary file with filtered content
grep -v localhost /etc/hosts | grep -v facebook.com > /tmp/hosts.tmp

# Add new entries
echo "127.0.0.2 localhost" >> /tmp/hosts.tmp
echo "8.8.8.8 facebook.com" >> /tmp/hosts.tmp

# Replace the hosts file
cp /tmp/hosts.tmp /etc/hosts

# Clean up
rm /tmp/hosts.tmp
